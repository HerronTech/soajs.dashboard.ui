<section>
	<div>
		<div>
			<button ng-if="access.kubernetes.daemonSet.addItem" class="btn btn-primary" type="button" aria-haspopup="true" aria-expanded="true"
			        ng-click="createItem('DaemonSet')">
				Add New DaemonSet
			</button>
			<button class="btn btn-primary f-right" type="button" aria-haspopup="true" aria-expanded="true"
			        ng-click="listDaemonSets(searchKeyword)">
				Search</span>
			</button>
			<input type="text" class="secret-search form-control f-right" ng-model="searchKeyword"
			       placeholder="Search ..."/>
			
		</div>
		<br>
		<div ng-if="daemonSets && daemonSets.items.length > 0 ">
			<ul class="blueListing">
				<li class="blueLi row-list active" ng-repeat="item in daemonSets.items"
				    ng-style="{'width': '99%'}">
					<div style="width: 55%;display: inline-block">
						<span class="">{{item.metadata.name}}</span>
					</div>
					
					<div style="width: 20%;display: inline-block">
						<span>Created: </span> <span class="">{{item.metadata.creationTimestamp}}</span>
					</div>
					<div style="float: right">
						<a ng-click="inspectItem(item)"
						   ng-style="{'margin-top': '-19px', 'margin-right': '5px'}"><span
								tooltip="inspect daemonSet" class="icon icon-info"></span></a>
					</div>
					<div style="float: right">
						<a ng-click="editItem(item, 'DaemonSet')"
						   ng-style="{'margin-top': '-19px', 'margin-right': '5px'}"><span
								tooltip="edit daemonSet" class="icon icon-pencil2"></span></a>
					</div>
					<div ng-if="access.kubernetes.daemonSet.delete" style="float: right">
						<a ng-click="deleteDaemonSet(item)" ng-confirm-click="Are you sure you want to delete this daemonSet?"
						   ng-style="{'margin-top': '-19px', 'margin-right': '5px'}"><span
								tooltip="delete daemonSet" class="icon icon-cross"></span></a>
					</div>
				</li>
				<li class="blueLi row-list" ng-show="daemonSets.metadata.continue" ng-style="{'width': '99%'}">
					<a href="" class="loadMore" ng-click="listDaemonSets(searchKeyword)">Load More</a>
				</li>
			</ul>
		</div>
		<div ng-if="!daemonSets || daemonSets.items.length === 0">
			<br/>
			<br/>
			<alert type="warning">No DaemonSets found</alert>
		</div>
	</div>

</section>