<section>
	<div>
		<div>
			<button ng-if="access.kubernetes.pv.addItem" class="btn btn-primary" type="button" aria-haspopup="true" aria-expanded="true"
			        ng-click="createItem('PV')">
				Add New PV
			</button>
			<button class="btn btn-primary f-right" type="button" aria-haspopup="true" aria-expanded="true"
			        ng-click="listPV(searchKeyword)">
				Search</span>
			</button>
			<input type="text" class="secret-search form-control f-right" ng-model="searchKeyword"
			       placeholder="Search ..."/>
			
		</div>
		<br>
		<div ng-if="pv && pv.items.length > 0 ">
			<ul class="blueListing">
				<li class="blueLi row-list active" ng-repeat="item in pv.items"
				    ng-style="{'width': '99%'}">
					<div style="width: 20%;display: inline-block">
						<span class="">{{item.metadata.name}}</span>
					</div>
					
					<div style="width: 25%;display: inline-block">
						<span>UID: </span> <span class="">{{item.metadata.uid}}</span>
					</div>
					
					<div style="width: 20%;display: inline-block">
						<span>Created: </span> <span class="">{{item.metadata.creationTimestamp}}</span>
					</div>
					<div style="float: right">
						<a ng-click="inspectItem(item)"
						   ng-style="{'margin-top': '-19px', 'margin-right': '5px'}"><span
								tooltip="inspect pv" class="icon icon-info"></span></a>
					</div>
					<div style="float: right">
						<a ng-click="editItem(item, 'PV')"
						   ng-style="{'margin-top': '-19px', 'margin-right': '5px'}"><span
								tooltip="edit pv" class="icon icon-pencil2"></span></a>
					</div>
					<div ng-if="access.kubernetes.pv.delete" style="float: right">
						<a ng-click="deletePV(item)" ng-confirm-click="Are you sure you want to delete this pv?"
						   ng-style="{'margin-top': '-19px', 'margin-right': '5px'}"><span
								tooltip="delete pv" class="icon icon-cross"></span></a>
					</div>
				</li>
				<li class="blueLi row-list" ng-show="pv.metadata.continue" ng-style="{'width': '99%'}">
					<a href="" class="loadMore" ng-click="listPV(searchKeyword)">Load More</a>
				</li>
			</ul>
		</div>
		<div ng-if="!pv || pv.items.length === 0">
			<br/>
			<br/>
			<alert type="warning">No PV found</alert>
		</div>
	</div>

</section>