<accordion close-others="false">
	<accordion-group is-open="$first" ng-repeat="(infra, infraInfo) in vms">
		<accordion-heading>{{infraInfo.label}}</accordion-heading>
		
		<div class="entryBoxes" ng-show="infraInfo.list">
			<div class="entryBox mb20" ng-repeat="service in infraInfo.list">
				<div class="header table">
					<span class="serviceLabelBox">
						<span>{{service.labels['soajs.service.name']}}</span>
						<span style="margin-left: 0;" ng-if="service.ip && service.ip !== ''"> / IP Address: {{service.ip}}</span>&nbsp;
					</span>
					
					<div class="dropdown serviceOpsDropdown">
						<button class="btn btn-default dropdown-toggle" type="button" id="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
							Service Operations
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" aria-labelledby="serviceOpsDropdown">
							<li><a href="" ng-click="inspectService(service)"><span class="icon icon-info"></span>&nbsp;Inspect VM</a>
							</li>
							<li>
								<a href="" ng-click="maintenanceService(service, 'startVM')" ng-confirm-click="Are you sure you want to start this VM?">
									<span class="icon icon-play"></span>&nbsp;Start VM
								</a>
							</li>
							<li>
								<a href="" ng-click="maintenanceService(service, 'restartVM')" ng-confirm-click="Are you sure you want to restart this VM?">
									<span class="icon icon-undo"></span>&nbsp;Restart VM
								</a>
							</li>
							<li>
								<a href="" ng-click="maintenanceService(service, 'powerOffVM')" ng-confirm-click="Are you sure you want to stop this VM?">
									<span class="icon icon-stop"></span>&nbsp;Stop VM
								</a>
							</li>
							<li>
								<a href="" ng-if="access.hacloud.services.delete" ng-click="deleteService(service)" ng-confirm-click="Are you sure you want to delete this VM?">
									<span class="icon icon-cross"></span>&nbsp;Delete VM
								</a>
							</li>
						</ul>
					</div>
				</div>
				<div class="body">
					<div class="grid">
						<table cellspacing="0" cellpadding="0" border="1" width="100%" class="customTable">
							<thead>
								<tr class="header">
									<td class="nameHeader">Container Name</td>
									<td class="maintenanceHeader">Started On</td>
									<td class="statusHeader">
										Status
									</td>
								</tr>
							</thead>
							<tbody ng-repeat="instance in service.tasks" ng-hide="instance.hideIt && !service.hideIt" ng-init="instance.name + '.' + instance.id">
								<tr class="cloud-tr-bgColor">
									<td>{{instance.name}}</td>
									<td>{{instance.status.ts | prettyLocalDate}}</td>
									<td>
										<span ng-show="instance.status.state === 'failed'" tooltip-class="ctrl-tooltip" tooltip-placement="left" class="red"><b>{{instance.status.state}}</b></span>
										<span ng-show="instance.status.state !== 'failed'" ng-class="{'green': instance.status.state ==='succeeded', 'red': instance.status.state !=='succeeded'}"><b>{{instance.status.state}}</b></span>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</accordion-group>
</accordion>