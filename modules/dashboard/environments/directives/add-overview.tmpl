<accordion close-others="false">
	<accordion-group is-open="true">
		<accordion-heading>
			General Information
		</accordion-heading>
		<div class="addEnvTable">
			<table>
				<tbody>
					<tr ng-repeat="(k,v) in wizard.gi">
						<td ng-if="k!='deploy'"><label class="text-capitalize">{{k}}</label></td>
						<td ng-if="k!='deploy'">{{v}}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</accordion-group>
	<accordion-group>
		<accordion-heading>
			Deployment Strategy
		</accordion-heading>
		<div class="addEnvImg">
			<h4 class="text-capitalize">{{wizard.deploy.selectedDriver}}</h4>
			<div class="f-right" ng-if="wizard.deploy.selectedDriver=='docker'">
				<img ng-src="themes/default/img/docker_logo.png"/>
			</div>
			<div class="f-right" ng-if="wizard.deploy.selectedDriver=='kubernetes'">
				<img ng-src="themes/default/img/kubernetes_logo.png"/>
			</div>
		</div>
		<hr class="c-right">
		<!--Docker-->
		<div ng-if="wizard.deploy.selectedDriver=='docker'">
			<div ng-if="wizard.deploy.deployment[wizard.deploy.selectedDriver].dockerremote==false">
				<div class="alert alert-info">
					<h4><span class="icon icon-info"></span> Info:</h4>
					<p> I have already prepared my machine(s) and installed <span class="text-capitalize">{{wizard.deploy.selectedDriver}}</span>
						as my container technology.
					</p>
				</div>
			</div>
			<div class="addEnvTable">
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.deploy.deployment[wizard.deploy.selectedDriver]">
							<td ng-if="k!='dockerremote'"><label class="text-capitalize">{{k}}</label></td>
							<td ng-if="k!='dockerremote'"> {{v}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<!--Kuberenetes-->
		<div ng-if="wizard.deploy.selectedDriver=='kubernetes'">
			<div ng-if="wizard.deploy.deployment[wizard.deploy.selectedDriver].kubernetesremote==false">
				<div class="alert alert-info">
					<h4><span class="icon icon-info"></span> Info:</h4>
					<p> I have already prepared my machine(s) and installed <span class="text-capitalize">{{wizard.deploy.selectedDriver}}</span>
						as my container technology.
					</p>
				</div>
			</div>
			<div ng-if="wizard.deploy.deployment[wizard.deploy.selectedDriver].kubernetesremote==true" class="addEnvTable">
				
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.deploy.deployment[wizard.deploy.selectedDriver]">
							<td ng-if="k!='kubernetesremote'"><label class="text-capitalize">{{k}}</label></td>
							<td ng-if="k!='kubernetesremote'"> {{v}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<!--Manual-->
		<div ng-if="wizard.deploy.selectedDriver=='manual'">
			<div class="alert alert-info">
				<h4><span class="icon icon-info"></span> Info:</h4>
				<p> I will not use any container technology to deploy my Service(s) and Daemon(s).
					I will also handle pulling and applying updates on the machines of this Environment myself.
				</p>
			</div>
		</div>
	</accordion-group>
	<accordion-group ng-show="wizard.controller.deploy">
		<accordion-heading>
			SOAJS Controller
		</accordion-heading>
		<fieldset>
			<legend>
				Container
			</legend>
			<div class="addEnvTable">
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.controller ">
							
							<td ng-if="k!='deploy'"><label class="text-capitalize">{{k}} <span ng-if="k=='memory'">(in MBytes)</span></label>
							</td>
							<td ng-if="k!='deploy'"> {{v}}</td>
						
						</tr>
					</tbody>
				</table>
			</div>
		</fieldset>
	</accordion-group>
	<accordion-group ng-show="wizard.urac.deploy">
		<accordion-heading>
			SOAJS URAC
		</accordion-heading>
		<fieldset>
			<legend>
				Container
			</legend>
			<div class="addEnvTable">
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.urac ">
							
							<td ng-if="k!='deploy'"><label class="text-capitalize">{{k}} <span ng-if="k=='memory'">(in MBytes)</span></label>
							</td>
							<td ng-if="k!='deploy'"> {{v}}</td>
						
						</tr>
					</tbody>
				</table>
			</div>
		</fieldset>
	</accordion-group>
	<accordion-group ng-show="wizard.oauth.deploy">
		<accordion-heading>
			SOAJS oAuth
		</accordion-heading>
		<fieldset>
			<legend>
				Container
			</legend>
			<div class="addEnvTable">
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.oauth ">
							
							<td ng-if="k!='deploy'"><label class="text-capitalize">{{k}} <span ng-if="k=='memory'">(in MBytes)</span></label>
							</td>
							<td ng-if="k!='deploy'"> {{v}}</td>
						
						</tr>
					</tbody>
				</table>
			</div>
		</fieldset>
	</accordion-group>
	<accordion-group ng-show="wizard.nginx.deploy">
		<accordion-heading>
			Nginx Server
		</accordion-heading>
		<fieldset ng-if="wizard.nginx" class="addEnvTable">
			<legend>
				Container
			</legend>
			<table>
				<tbody>
					<tr ng-repeat="(k,v) in wizard.nginx">
						<td ng-if="k!='deploy' && k!='customUi' && k!='certsGit'"><label class="text-capitalize">{{k}}
							<span ng-if="k=='memory'">(in MBytes)</span></label>
						</td>
						<td ng-if="k!='deploy' && k!='customUi' && k!='certsGit'"> {{v}}</td>
					</tr>
				</tbody>
			</table>
		</fieldset>
		<fieldset ng-if="wizard.nginx.customUi" class="addEnvTable">
			<legend>
				Custom UI
			</legend>
			<div>
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.nginx.customUi">
							<td><label class="text-capitalize">{{k}}
								<span ng-if="k=='memory'">(in MBytes)</span></label>
							</td>
							<td> {{v}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</fieldset>
		<fieldset ng-if="wizard.nginx.certsGit" class="addEnvTable">
			<legend>
				Certificates
			</legend>
			<div>
				<table>
					<tbody>
						<tr ng-repeat="(k,v) in wizard.nginx.certsGit">
							<td><label class="text-capitalize">{{k}}
								<span ng-if="k=='memory'">(in MBytes)</span></label>
							</td>
							<td> {{v}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</fieldset>
	
	</accordion-group>
</accordion>