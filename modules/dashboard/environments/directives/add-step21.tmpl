<accordion close-others="true">
	<accordion-group is-open="clusters.local" ng-click="switchCluster('local')">
		<accordion-heading>
			<input type="radio" ng-checked="clusters.local" value="true" name="local" disabled/>&nbsp;
			I do not have a MongoDB server, i want SOAJS to deploy one for me
		</accordion-heading>
		<p>
			SOAJS installer will deploy a preconfigured MongoDB server for you.<br />
			You can provide an optional prefix for your databases and/or change the exposed port.
			<hr>
		</p>
		<table width="100%" cellspacing="0" cellpadding="0" border="0">
			<tbody>
				<tr class="form-group credentials-wrapper">
					<td>
						<div>
							<label class="f-left">Name</label>
							<input type="text" class="form-control" ng-required="false" ng-model="form.formData.cluster.local.name" />
							<div class="fieldMsg hint">Provide a name for your mongo server.</div>
						</div>
					</td>
				</tr>
				<tr class="form-group credentials-wrapper">
					<td>
						<div>
							<label class="f-left">Database Prefix</label>
							<input type="text" class="form-control" ng-required="false" ng-model="form.formData.cluster.local.prefix" />
							<div class="fieldMsg hint">Provide an optional prefix for your databases names</div>
						</div>
					</td>
				</tr>
				<!--<tr class="form-group tr-code-wrapper">-->
					<!--<td class="form-select">-->
						<!--<div id="isReplica-wrapper">-->
							<!--<input class="f-left form-control" ng-model="form.formData.cluster.external.isReplica"-->
							       <!--ng-required="false" type="checkbox" ng-change="" style="box-shadow: none; width:2%;"/>&nbsp;-->
							<!--<label>Replicated Database</label>-->
							<!--<div class="fieldMsg hint">Check the box if the MongoDB is hosted on multiple servers.</div>-->
						<!--</div>-->
					<!--</td>-->
				<!--</tr>-->
				<!--<tr class="form-group replicaSet-wrapper" ng-show="form.formData.cluster.external.isReplica">-->
					<!--<td>-->
						<!--<div id="replicaSet-wrapper">-->
							<!--<label class="f-left  ">Replica Set Name</label>-->
							<!--<input type="text" class="form-control" ng-required="false" ng-model="form.formData.cluster.external.replicaSet"/>-->
							<!--<div class="fieldMsg hint">Provide the name of the replica Set you are connecting to.</div>-->
						<!--</div>-->
					<!--</td>-->
				<!--</tr>-->
				<tr class="form-group servers-wrapper">
					<td>
						<fieldset>
							<legend>Servers List</legend>
							<div id="servers">
								<table width="100%" cellspacing="0" cellpadding="0" border="0">
									<tbody>
										<tr class="form-group host-wrapper" ng-repeat="oneServer in form.formData.cluster.local.servers track by $index">
											<td width="80%" valign="top">
												<div>
													<label>Hostname</label>
													<input class="form-control " ng-model="form.formData.cluster.local.servers[$index].host" ng-required="true" type="text">
													<div class="fieldMsg hint">The hostname must not hold the default localhost IP address(127.0.0.1).</div>
												</div>
											</td>
											<td width="1%"></td>
											<td width="14%" valign="top">
												<div>
													<label>Port</label>
													<input class="form-control " ng-model="form.formData.cluster.local.servers[$index].port" placeholder="27017" ng-required="true" type="text">
												</div>
											</td>
											<td width="1%"></td>
											<td width="4%" valign="top">
												<br /><br />
												<div>
													<input  type="button" class="f-right btn btn-sm btn-danger" value="remove" ng-click="removeServer($index, 'local')" ng-disabled="$index === 0"/>
												</div>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</fieldset>
					</td>
				</tr>
