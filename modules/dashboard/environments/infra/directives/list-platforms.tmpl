<section ng-controller="platformsCtrl">
	<div ng-show="!envCode">
		<a class="btn btn-primary" href="#/environments-add">Create New Environment</a>
		<hr>
		<div class="table w100 c-both grid">
			<table width="100%" cellpadding="10" cellspacing="10">
				<tr class="odd">
					<td style='padding:12px; font-size:15px;'>Create custom environments and configure them with
						different security protocol.
					</td>
				</tr>
				<tr class="even">
					<td style='padding:12px; font-size:15px;'>Create and manage custom registry entries that your code
						needs upon deployment.
					</td>
				</tr>
				<tr class="odd">
					<td style='padding:12px; font-size:15px;'>Create and manage different types of resources.</td>
				</tr>
				<tr class="even">
					<td style='padding:12px; font-size:15px;'>Create and manage standalone or multi-tenant databases.
					</td>
				</tr>
				<tr class="odd">
					<td style='padding:12px; font-size:15px;'>Define and configure your platform deployment strategy and
						procedures.
					</td>
				</tr>
				<tr class="even">
					<td style='padding:12px; font-size:15px;'>Deploy services, daemons and resources in your environment
						with just a few clicks.
					</td>
				</tr>
				<tr class="odd">
					<td style='padding:12px; font-size:15px;'>Monitor, Troubleshoot, scale and perform maintenance
						operations on all your containers.
					</td>
				</tr>
				<tr class="even">
					<td style='padding:12px; font-size:15px;'>Turn on Continuous Delivery and configure your update
						strategy.
					</td>
				</tr>
				<tr class="odd last">
					<td style='padding:12px; font-size:15px;'>Monitor Analytics from Cloud Traffic and Performance.</td>
				</tr>
			</table>
		</div>
	</div>
	
	<div ng-show="envCode">
		<div class="envHeader">
			<table width="100%" class="">
				<tr>
					<td style="width: 15%">
						<span><b style="margin:0;">{{envCode}}</b></span>
					</td>
					<td style="text-align: end;">
						<div class="entryAction">
							<!--<a ng-if="access.editEnvironment" href="" ng-click="editEnvironment(envCode);">-->
								<!--<span class="icon icon-pencil2" tooltip="{{translation.editEnvironment[LANG]}}"></span>-->
							<!--</a>-->
							
							<a ng-if="access.deleteEnvironment && envCode !== 'DASHBOARD'" href="" ng-confirm-click="Are you sure you want to remove this environment ?" ng-click="deleteEnvironment(envCode);">
								<span class="icon icon-cross" tooltip="{{translation.deleteEnvironment[LANG]}}"></span>
							</a>
						</div>
					</td>
				</tr>
			</table>
		</div>
		<em style="margin-left: 5px">{{envDescription}}</em>
		<hr>
		<div ng-switch="envType">
			<div ng-switch-when="manual">
				<div ng-include="'modules/dashboard/environments/infra/directives/manual.tmpl'"></div>
			</div>
			<div ng-switch-when="container">
				<div ng-include="'modules/dashboard/environments/infra/directives/container.tmpl'"></div>
			</div>
		</div>
	</div>
</section>