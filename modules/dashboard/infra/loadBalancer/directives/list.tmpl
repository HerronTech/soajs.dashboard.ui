<section ng-controller="infraLoadBalancerCtrl">
	<div>
		<br />
		<a class="btn btn-sm btn-primary" ng-if="access.addLoadBalancer" ng-click="addLoadBalancer(currentSelectedInfra)">
			<span class="icon icon-plus"></span> Add New Load Balancer
		</a>
	</div>

	<div class="f-right w8 searchBoxContainer">
		<button class="btn btn-success f-right" ng-click="listLoadBalancers(selectedGroup, currentSelectedInfra)">
			Refresh&nbsp;&nbsp;<span class="icon icon-loop2"></span>
		</button>
	</div>

	<div style="width:500px" class="f-right" ng-if="infraGroups.length > 0">
		Select group to list firewalls:
		<select style="display:inline" class="form-control w50" ng-model="selectedGroup" ng-change="listLoadBalancers(selectedGroup, currentSelectedInfra)" ng-options="group as group.name for group in infraGroups">
		</select>
	</div>

	<div ng-if="access.list">
		<div ng-if="infraLoadBalancers && infraLoadBalancers.length > 0" class="entryBoxes">
			<br /><nglist></nglist>
		</div>
	</div>
</section>
