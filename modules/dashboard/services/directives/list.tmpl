						<fieldset class="custom-fieldset w100" ng-show="tabs.all">
							<legend>{{groupService.group}}</legend>
							<div class="entryBoxes">
								<div id="s_{{service._id}}" ng-repeat="service in groupService.services.slice(((paginations['all'][groupService.group].currentPage-1)*itemsPerPage), ((paginations['all'][groupService.group].currentPage)*itemsPerPage)) | reposSearchFilter:searchKeyword" class="entryBox" ng-init="service.hide = true;">
									<div ng-include="'modules/dashboard/services/directives/recordListing.tmpl'"></div>
								</div>
								<table border="0" cellspacing="0" cellpadding="0" width="100%" class="navigation">
									<tr>
										<td align="right">
											<pagination total-items="paginations['all'][groupService.group].totalItems" ng-model="paginations['all'][groupService.group].currentPage" max-size="maxSize" class="pagination-sm" boundary-links="true" rotate="false" num-pages="numPages" items-per-page="itemsPerPage"></pagination>
										</td>
									</tr>
								</table>
							</div>
						</fieldset>
					</div>
				
				</tab>
				<tab heading="MicroServices" ng-show="tabs.services.length > 0">
