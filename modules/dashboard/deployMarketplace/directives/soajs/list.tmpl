<section ng-controller="soajsDeployCatalogCtrl">
	<div ng-if="access.listServices" class="f-right">
		<a href="" ng-click="listSoajsCatalog()" class="btn btn-primary f-right">
			<span class="icon icon-undo" tooltip="Refresh List"></span>{{translation.refresh[LANG]}}
		</a>
		<br/><br/>
	</div>
	<div ng-show="!showCatalog">
		<br>
		<br>
		<alert type="warning">No Catalogs found</alert>
	</div>
	<tabset ng-show="showCatalog">
		<tab ng-repeat="(soajs, mainTabs) in soajsTabs track by $index" heading="{{soajs}}">
			<tabset >
				<br>
				<tab ng-repeat="(main, subTabs) in mainTabs track by $index" heading="{{main}}">
					<br>
					<tabset>
						<tab ng-repeat="(sub, groups) in subTabs track by $index" heading="{{sub}}">
							<br>
							<div ng-repeat="(group, records) in groups track by $index">
								<fieldset class="custom-fieldset" ng-show="group">
									<legend>{{group}}</legend>
									<div class="entryBoxes">
										<div id="s_{{service._id}}" ng-repeat="service in records" class="entryBox"
										     ng-init="service.hide = true;">
											<div ng-include="'modules/dashboard/deployMarketplace/directives/soajs/deploy.tmpl'"></div>
										</div>
									</div>
								</fieldset>
							</div>
						
						</tab>
					</tabset>
				</tab>
			</tabset>
		</tab>
	</tabset>
</section>

<script type="text/ng-template" id="configure.tmpl">
	<div ng-if="envDeployeType === 'kubernetes' && service.type === 'service'">
		<div ng-include="'modules/dashboard/deployMarketplace/directives/soajs/configure-service.tmpl'"></div>
	</div>
</script>

<script type="text/ng-template" id="reconfigure.tmpl">
	<div ng-if="envDeployeType === 'kubernetes' && service.type === 'service'">
		<div ng-include="'modules/dashboard/deployMarketplace/directives/soajs/reconfigure-service.tmpl'"></div>
	</div>
</script>
