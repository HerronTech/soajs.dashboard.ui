<section ng-controller="gitAccManagementCtrl">
	<a ng-if="access.login" href="" class="btn btn-primary" ng-click="addAccount()">{{translation.addAccount[LANG]}}</a>
	<div ng-if="!accounts || accounts.length === 0">
		<br>
		<br>
		<alert type="warning">{{translation.noGitAccountsAdded[LANG]}}</alert>
	</div>
	<br>
	<div ng-if="accounts.length > 0">
		<div class="entryBoxes entryBoxesGrid">
			<div ng-if="access.listAccounts" id="a_{{account._id}}" ng-repeat="account in accounts"
			     class="entryBox customEntryBox">
				<div class="header opened" ng-if="account">
					<span class="icon icon-github" ng-if="account.provider === 'github'"></span>
					<span class="icon" ng-if="account.provider === 'bitbucket'"><i
							class="fab fa-bitbucket"></i></span>
					<span class="icon" ng-if="account.provider === 'bitbucket_enterprise'"><i
							class="fab fa-bitbucket"></i></span>
					{{account.label|uppercase}}&nbsp;&nbsp;[{{account.owner}}]
				</div>
				
				<div class="body" ng-if="account">
					<div class="inner" ng-class="{'hidden': account.hide}">
						<div>
							<fieldset>
								<legend>Organizations</legend>
								<div class="entryBoxes entryBoxesGrid">
									<div ng-repeat="org in account.metadata.organizations">
										<div class="entryBox greyBox" ng-style="{'width': '200px'}">
											<b>{{org}}</b>&nbsp;&nbsp;
										</div>
									</div>
								</div>
							</fieldset>
						</div>
					</div>
				</div>
				
				<div class="upgradeAction" ng-if="access.upgrade && account.access === 'public'">
					<a href="" ng-click="upgrade(account)" ng-if="access.upgrade">
						<span class="icon icon-circle-up" tooltip="{{translation.upgradeAccount[LANG]}}"> </span>
					</a>
				</div>
				
				<div class="deleteAction" ng-if="access.logout">
					<a href="" ng-click="delete(account)"
					   ng-confirm-click="Are you sure you want to delete this account?">
						<span class="icon icon-cross" tooltip="{{translation.deleteAccount[LANG]}}"></span></span>
					
					</a>
				</div>
				
				
				<div class="syncAction" ng-if="access.sync">
					<a href="" ng-click="sync(account)">
						<span class="icon icon-loop2" tooltip="{{translation.syncAccount[LANG]}}"> </span>
					</a>
				</div>
				
				<div class="entryAction">
					<a href="" ng-click="showHide(account)">
						<span class="icon icon-{{account.icon || 'plus'}}"></span>
					</a>
				</div>
			</div>
		</div>
	</div>

</section>