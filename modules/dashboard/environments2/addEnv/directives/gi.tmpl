<table border="0" cellspacing="0" cellpadding="0" width="100%">
	<tbody>
		<tr>
			<td colspan="3">
				<div id="code-wrapper">
					<label>Code</label>
					<input class="form-control" ng-model="wizard.form.data.code" type="text" placeholder="DEV | QA | CAT | STG | PROD | TEST" ng-required="wizard.form.entries.code.required" ng-disabled="wizard.form.entries.code.disabled" ng-change="wizard.form.entries.code.onAction()"/>
					<div class="fieldMsg hint">Provide a Code for your Environment</div>
				</div>
			</td>
		</tr>
		<tr>
			<td colspan="3">
				<div id="description-wrapper">
					<label>Description</label>
					<textarea rows="3" ng-model="wizard.form.data.description" class="form-control" placeholder="My Environment Description..." ng-required="wizard.form.entries.description.required"></textarea>
					<div class="fieldMsg hint">Provide a description for your environment</div>
				</div>
			</td>
		</tr>
	</tbody>
</table>
